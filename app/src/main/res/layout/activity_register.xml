<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:background="@drawable/home2"
    tools:context="com.mlabs.bbm.firstandroidapp_morningclass.register">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="800px"
        android:id="@+id/imageView"
        android:alpha=".7"
        android:background="@drawable/login"
        android:backgroundTint="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textFilter"
        android:ems="10"
        android:id="@+id/fname"
        android:textColor="#000000"
        android:backgroundTint="#000000"
        android:hint="First Name"
        android:textColorHint="#868585"
        android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
        android:layout_above="@+id/lname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textFilter"
        android:ems="10"
        android:id="@+id/lname"
        android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
        android:textColor="#000000"
        android:backgroundTint="#000000"

        android:hint="Last Name"
        android:textColorHint="#868585"
        android:layout_above="@+id/username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textFilter"
        android:ems="10"
        android:id="@+id/username"
        android:textColor="#000000"
        android:backgroundTint="#000000"
        android:hint="Username"
        android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM0123456789._"
        android:textColorHint="#868585"
        android:layout_above="@+id/email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM0123456789._@"
        android:textColor="#000000"
        android:backgroundTint="#000000"
        android:hint="Email"
        android:textColorHint="#868585"
        android:layout_above="@+id/pass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pass"
        android:textColor="#000000"
        android:password="true"
        android:backgroundTint="#000000"
        android:hint="Password"
        android:textColorHint="#868585"
        android:layout_above="@+id/cpass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/cpass"
        android:textColor="#000000"
        android:password="true"
        android:backgroundTint="#000000"
        android:hint="Confirm Password"
        android:textColorHint="#868585"
        android:layout_above="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/button"
        android:onClick="dan"
        android:background="#b2633e"
        android:textColor="#000000"
        android:clickable="true"
        android:enabled="true"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp" />

</RelativeLayout>
